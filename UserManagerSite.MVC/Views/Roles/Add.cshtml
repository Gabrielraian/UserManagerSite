@model UserManagerSite.MVC.ViewModels.RoleViewModel

<section class="flex-col padding-20">
    <div class="breadcumbs">
        <h1>Cadastro de Perfil</h1>
    </div>

    <form asp-controller="Roles" asp-action="Add" method="post" class="form-line">
        <fieldset class="flex-row padding-20">
            <legend>Informações do Perfil</legend>

            <div class="flex-row grow space-between">
                <div class="flex-col grow">
                    <label>Nome</label>
                    <input type="text" asp-for="Role.role" required minlength="2" maxlength="50">
                    <span asp-validation-for="Role.role"></span>
                </div>
            </div>

        </fieldset>

        <div class="flex-row end grow">
            <div>
                <a class="button secondary" asp-controller="Roles" asp-action="Index">Voltar</a>
            </div>
            <div>
                <button class="button primary" type="submit">Salvar</button>
            </div>
        </div>
    </form>

</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
